/* pages/posts/posts.wxss */
swiper{
  width:100%;
  height:600rpx;
}

swiper image{
  width:100%;
  height:600rpx;
}

.post-containet{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date{
  margin: 10rpx 0rpx 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author{
  height: 60rpx;
  width: 60rpx;
  /* vertical-align: middle; */
}

.post-date{
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin: 0px 0px 10px 10px;
  color: #333;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-content{
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  /* margin: 0rpx 0rpx 20rpx 20rpx; */
}

.post-like{
  font-size: 26rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-content: center;
}

.post-like-image{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.post-like-font{
  margin-right: 40rpx;
}